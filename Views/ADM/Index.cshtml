 @model RoleTopMVC.ViewModels.DashboardViewModel
  <link href="..;img/logo.png" rel="icon" type="../image/x-icon"/>
    <link rel="stylesheet" href="~/css/ADM.css" type="text/css">

        <nav> 
                <ul>
                  <li>ADMINISTRADOR</li>
                  <li><img src="../img/logo.png" alt="Logotipo do RolÃª Top" title="logo" height="200px" width="250px" /> </li>
                  <a asp-controller="Home" asp-action="index" >VOLTAR PARA PAGINA INICIAL</a>
                </ul>
            </nav>
    <div>
            <section id="status-pedidos">
                    <h3>Status dos pedidos</h3>
                    <div id="painel">
                        <div class="box-status-pedidos aprovados">
                            <h4>Aprovados</h4>
                            <p>@Model.PedidosAprovados  </p>
                        </div>
                        <div class="box-status-pedidos pendentes">
                            <h4>Pendente</h4>
                            <p>@Model.PedidosPendentes</p>
                        </div>
                        <div class="box-status-pedidos reprovados">
                            <h4>Reprovados</h4>
                            <p>@Model.PedidosReprovados</p>
                        </div>
                    </div>
                </section>

        <section id="lista-pedidos">
            <h3>Lista de Eventos</h3>
            <table class="opa">
                <thead>
                    <tr>
                        <th rowspan="2">Nome</th>
                        <th colspan="2">Data</th>
                        <th colspan="2" rowspan="2">Aprovar</th>
                  </tr>
                
                </thead>
                <tfoot>
                    <tr>
                        <td colspan="6">
                            <p>Eventos atualizados em  @DateTime.Now </p>
                        </td>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach(var pedido in Model.Pedidos )
                    {
                        <tr>
                            <td>@pedido.Cliente.Nome</td>
                            <td>@pedido.Data</td>
                            

                            <td><a href='@Url.Action("Aprovar", "Pedido", new {id = @pedido.Id})'><i class="fas fa-check"></i></a></td>
                            <td><a href='@Url.Action("Reprovar", "Pedido", new {id = @pedido.Id})'><i class="fas fa-times"></i></a></td>
                        </tr>
                    }
                    
                </tbody>
            </table>
        </section>
    </div>
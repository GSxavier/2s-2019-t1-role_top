@{
    var nomeView = (string) ViewData["NomeView"];
}
<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <!-- PASSOS DO MENU RESPONSIVO -->
    <!-- PASSO 1 - Certifique-se de que essa linha abaixo existe no seu código -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Role Top</title>
    <link href="img/logo.png" rel="icon" type="image/x-icon"/>
    <link href="https://fonts.googleapis.com/css?family=Fredoka+One&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Londrina+Solid:900%7COpen+Sans" rel="stylesheet">

    @if(!"Home".Equals(nomeView)){
        <link href="~/css/style-secondary-pages.css" rel="stylesheet" type="text/css">
        <link href="~/css/style-form-pages.css" rel="stylesheet" type="text/css">
        
    }

    <section id='logo-area'>
            <img src="../img/logo.png" alt="Logotipo do Rolê Top" title="logo" height="300px" width="350px" />
        </section>

    <link href="~/css/style.css" rel="stylesheet" type="text/css">
    <!-- PASSO 2 - Copie a linha do <script> abaixo para o seu HTML -->
    <!-- Importar o Font Awesome para o projeto -->
    <script src="https://kit.fontawesome.com/349a64cb04.js"></script>
</head>
<body class = "flex-container">
    <header>
        <nav>
            <div class="section-container">
                <ul>
                    <!-- PASSO 3 - Adicione esse li à sua ul -->
                    <li id="bt-mobile-menu">
                        <!-- HTML para colocar os ícones do FA -->
                        <a href="javascript:void(0);" class="icon" onclick="toggleMobileMenu()">
                            <i class="fa fa-bars"></i>
                        </a>
                    </li>
                    <!-- PASSO 4 - Adicione essa class="bt-common-menu" nas suas li -->
                    <!-- PASSO 5 - Adicione o onclick="toggleMobileMenu()" nas tags a -->
                <li class="bt-common-menu"><a onclick="toggleMobileMenu()" asp-controller ="cliente" asp-action="Home"> HOME</a></li>
                <li class="bt-common-menu"><a onclick="toggleMobileMenu()" asp-controller ="cliente" asp-action="Galeria" >GALERIA </a></li>
                <li class="bt-common-menu"><a onclick="toggleMobileMenu()" asp-controller ="cliente" asp-action="Agenda">AGENDA </a></li>
                <li class="bt-common-menu"><a onclick="toggleMobileMenu()" asp-controller ="cliente" asp-action="Contato">CONTATO </a></li>
                <li class="bt-common-menu"><a onclick="toggleMobileMenu()"  asp-controller ="cliente" asp-action="Localizacao">LOCALIZAÇÃO </a></li>
                </ul>
            </div>
        </nav>
        @if("Home".Equals(nomeView))
        {
            Html.RenderPartial("_HeaderHomePage");
        }
        
    </header>
            
</body>

